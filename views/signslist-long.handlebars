<div class="signers">
    <h1>who else signed my petition?</h1>
    <div class="container">
        <div>
            {{#signers}}
                {{#if url age city}}
                    <h2>
                    <a href="{{url}}">{{first_name}} {{last_name}} | </a><span>{{age}} | </span>
                    <a href="{{city}}">{{city}}</a>
                    </h2>
                {{else if url age}}
                    <h2>
                    <a href="{{url}}">{{first_name}} {{last_name}} | </a><span>{{age}}</span>                    
                    </h2>
                {{else if age}}
                    <h2>{{first_name}} {{last_name}} | {{age}}</h2>
                {{else if age city}}
                    <h2>
                    {{first_name}} {{last_name}} | {{age}} | <a href="{{city}}">{{city}}</a>
                    </h2>
                {{else if city}}
                    <h2>
                    {{first_name}} {{last_name}}                    
                    <a href="{{city}}">| {{city}}</a>
                    </h2>
                {{else if url city}}
                    <h2>
                    <a href="{{url}}">{{first_name}} {{last_name}} | </a>
                    <a href="{{city}}">{{city}}</a>
                    </h2>
                {{else}}
                    <h2>{{first_name}} {{last_name}}</h2>
                {{/if}}
            {{/signers}}            
        </div>
    </div>
</div>