<div class="container update">
    <h2>Update Profile</h2>
              
        <form method='POST'>
            {{#rows}}
                <input type='text' name='firstName' value="{{first_name}}" placeholder='First Name' autocomplete='off' >
                <input type='text' name='lastName' value="{{last_name}}" placeholder='* Last Name' autocomplete='off'>
                <input type='email' name='email' value="{{email}}" placeholder='* Email Address' autocomplete='off'>
                <input type='password' name='password' placeholder='Password' autocomplete='off'>
                <input type='text' name='age' value="{{age}}" placeholder='Age' autocomplete='off' pattern="^[0-9]*$">
                <input type='text' name='city' value="{{city}}" placeholder='City' autocomplete='off' pattern="^[a-zA-Z ]+$">
                <input type='url' name='url' value="{{url}}" placeholder='Website' autocomplete='off' pattern="https?:\/\/(www\.)?[-a-zA-Z0-9@:%._\+~#=]{1,256}\.[a-zA-Z0-9()]{1,6}\b([-a-zA-Z0-9()@:%_\+.~#?&amp;//=]*)">
           
            
            {{/rows}}
              {{>csrf}}
            <button type="submit">update</button>
        </form>        
       {{#if message}}
            {{>msgBox}}
        {{/if}}
   
</div> 